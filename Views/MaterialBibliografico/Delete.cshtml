@model SistemaBiblioteca.Models.MaterialBibliografico

@{
    ViewData["Title"] = "Eliminar Material";
}

<h2 class="text-center mb-4 text-danger">Eliminar material bibliográfico</h2>

@if (TempData["ErrorEliminar"] != null)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>@TempData["ErrorEliminar"]</div>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success d-flex align-items-center" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <div>@TempData["Success"]</div>
    </div>
}

<div class="card shadow-sm p-4 mt-3">
    <h4 class="text-secondary">Detalles del material</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Autor)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Autor)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cantidad)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cantidad)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
    </dl>

    <form asp-action="Delete" asp-controller="MaterialBibliografico" method="post" id="formEliminar">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label>¿Querés eliminar todas las existencias o sólo una unidad?</label><br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="eliminarCantidad" id="eliminarUno" value="uno" checked>
                <label class="form-check-label" for="eliminarUno">Sólo una unidad</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="eliminarCantidad" id="eliminarTodas" value="todas">
                <label class="form-check-label" for="eliminarTodas">Todas las existencias</label>
            </div>
        </div>

        <div class="d-flex justify-content-start gap-3 mt-3">
            <button type="button" class="btn btn-danger"
                    id="btnConfirmarEliminar"
                    data-bs-toggle="modal"
                    data-bs-target="#confirmarModal">
                Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </form>

    <!-- 🌸 Modal de Confirmación -->
    <div class="modal fade" id="confirmarModal" tabindex="-1" aria-labelledby="confirmarModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 1rem;">
                <div class="modal-header" style="background-color: #ffd6e0;">
                    <h5 class="modal-title fw-bold" id="confirmarModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <p class="fs-5">
                        ¿Estás segura que querés borrar el libro <strong>@Model.Titulo</strong>?
                    </p>
                    <p class="text-muted">
                        Esta acción no se puede deshacer.
                    </p>
                </div>
                <div class="modal-footer justify-content-center border-0 pb-4">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnConfirmarBorrar" class="btn btn-danger px-4">Sí, borrar</button>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const form = document.getElementById("formEliminar");
                const botonConfirmar = document.getElementById("btnConfirmarBorrar");

                botonConfirmar.addEventListener("click", function () {
                    // Cierra el modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById("confirmarModal"));
                    modal.hide();

                    // Envía el formulario
                    form.submit();
                });
            });
        </script>
}

