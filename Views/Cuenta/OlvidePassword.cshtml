@model TuProyecto.Models.OlvidePasswordViewModel
@{
    ViewData["Title"] = "Olvidé mi contraseña";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow rounded-4">
        <div class="card-body">
            <h3 class="text-center text-primary mb-3">🔑 Recuperar contraseña</h3>

            <form asp-action="OlvidePassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">
                    Generar enlace
                </button>
            </form>
        </div>
    </div>
</div>
