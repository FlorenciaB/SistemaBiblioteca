@model TuProyecto.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Restablecer contraseña";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow rounded-4">
        <div class="card-body">
            <h3 class="text-center text-primary mb-3">🔒 Restablecer contraseña</h3>
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Nueva contraseña" />
                    <label asp-for="Password">Nueva contraseña</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar contraseña" />
                    <label asp-for="ConfirmPassword">Confirmar contraseña</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">
                    Guardar nueva contraseña
                </button>
            </form>
        </div>
    </div>
</div>
